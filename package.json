{
  "name": "sermaluc-blog-node",
  "version": "0.0.1",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "watch:ts": "swc src -w --out-dir build",
    "watch:js": "nodemon --watch \"build/**/*\" -e js ./build/index.js",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run watch:ts\" \"npm run watch:js\"",
    "build": "swc src -d build",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix"
  },
  "_moduleAliases": {
    "@src": "./build"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.78",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "dependencies": {
    "argon2": "^0.31.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "mongoose": "^7.6.3",
    "winston": "^3.10.0",
    "zod": "^3.22.2",
    "zod-express-middleware": "^1.4.0"
  }
}
